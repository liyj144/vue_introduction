<!-- 样例1： vue 中hvvm的基本构成 -->
<html>
<title>测试1</title>
<script src="./vue.js"></script>
<body>
<!-- 这是我们的 View -->
<div id="example-1">
  Hello {{ name }}!  <!-- {{}}  中的内容被当做指令处理， 被编译为v-text 指令 -->
</div>
<div id="example-2">
  <p v-if="greeting">Hello!</p>
</div>
<div id="example-3">
<!-- 注意index索引指定别名时不需要$前缀 -->
<ul>
  <li v-for="(index_outer, item) in items" transition="stagger" stagger="100">
    {{ index_outer }}
      <ul>
	      <li v-for="num in item.nums">
	        {{ $index }} ---- {{ num }}
	      </li>
      </ul>
  </li>
</ul>
</div>
</body>
<script src="./1.js"></script>
</html>